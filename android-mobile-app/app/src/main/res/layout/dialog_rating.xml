<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_round_rect_15"
    android:backgroundTint="@color/app_black"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/tv_title"
        style="@style/TextViewLocal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/outfit_medium"
        android:gravity="center"
        android:text="Rate this content"
        android:textSize="@dimen/_20sp" />

    <TextView
        android:id="@+id/tv_subtitle"
        style="@style/TextViewLocal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/outfit_regular"
        android:gravity="center"
        android:text="Tell us what you think"
        android:textColor="@color/text_color_light"
        android:textSize="@dimen/_14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/star_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_star"
            android:tint="@color/text_color_light" />

        <ImageView
            android:id="@+id/star_2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_star"
            android:tint="@color/text_color_light" />

        <ImageView
            android:id="@+id/star_3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_star"
            android:tint="@color/text_color_light" />

        <ImageView
            android:id="@+id/star_4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_star"
            android:tint="@color/text_color_light" />

        <ImageView
            android:id="@+id/star_5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_star"
            android:tint="@color/text_color_light" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_rating_text"
        style="@style/TextViewLocal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/outfit_regular"
        android:gravity="center"
        android:text=""
        android:textColor="@color/app_color"
        android:textSize="@dimen/_16sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_cancel"
            style="@style/TextViewLocal"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_stoke_10"
            android:backgroundTint="@color/trans_stroke_color"
            android:fontFamily="@font/outfit_regular"
            android:gravity="center"
            android:text="Cancel"
            android:textSize="@dimen/_16sp" />

        <TextView
            android:id="@+id/btn_submit"
            style="@style/TextViewLocal"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_round_rect_10"
            android:backgroundTint="@color/app_color"
            android:fontFamily="@font/outfit_regular"
            android:gravity="center"
            android:text="Submit"
            android:textSize="@dimen/_16sp"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>