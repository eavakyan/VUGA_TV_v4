<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="ageRating"
            type="com.retry.vuga.model.AgeRating" />
        <variable
            name="isSelected"
            type="Boolean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:background="@drawable/bg_for_profile_tab"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Age Badge -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="0dp">

                    <TextView
                        android:id="@+id/tvRatingCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:text="@{ageRating.name}"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:fontFamily="@font/outfit_semi_bold"
                        tools:text="7-12" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tvRatingName"
                    style="@style/TextViewLocal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/outfit_medium"
                    android:textSize="16sp"
                    tools:text="Ages 7-12" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvRatingDescription"
                style="@style/TextViewLocal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/outfit_regular"
                android:textColor="@color/text_color_light"
                android:textSize="13sp"
                tools:text="Suitable for ages 7 to 12" />
        </LinearLayout>

        <RadioButton
            android:id="@+id/radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/app_color"
            android:checked="@{isSelected}" />

    </LinearLayout>
</layout>