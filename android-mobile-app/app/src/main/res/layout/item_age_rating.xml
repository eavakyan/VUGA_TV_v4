<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">

        <!-- Rating Badge -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp"
            android:layout_marginEnd="12dp">

            <TextView
                android:id="@+id/tvRatingCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sp"
                tools:text="0-6" />

        </androidx.cardview.widget.CardView>

        <!-- Rating Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvRatingName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_12sp"
                tools:text="0-6 years" />

            <TextView
                android:id="@+id/tvRatingDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/text_color_light"
                android:textSize="@dimen/_10sp"
                android:visibility="gone"
                tools:text="Content suitable for ages 0-6 (Early Childhood)"
                tools:visibility="visible" />

        </LinearLayout>

        <!-- Access Status -->
        <ImageView
            android:id="@+id/ivAccessStatus"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="8dp"
            tools:src="@drawable/ic_tick" />

    </LinearLayout>

</layout>