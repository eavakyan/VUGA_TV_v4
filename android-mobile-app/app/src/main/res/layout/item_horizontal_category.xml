<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="genre"
            type="com.retry.vuga.model.HomePage.GenreContents" />
        
        <variable
            name="isSelected"
            type="boolean" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:orientation="horizontal">

        <TextView
            style="@style/TextViewLocal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@{isSelected ? @drawable/bg_for_movies_tab : @drawable/bg_stoke_15}"
            android:backgroundTint="@{isSelected ? @color/app_color : @color/transparent}"
            android:fontFamily="@font/outfit_medium"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp"
            android:text="@{genre.title}"
            android:textColor="@{isSelected ? @color/text_color : @color/text_color_light}"
            android:textSize="@dimen/_14sp" />

    </LinearLayout>

</layout>