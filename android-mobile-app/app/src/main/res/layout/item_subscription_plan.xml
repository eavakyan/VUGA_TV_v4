<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <!-- Add any data bindings here if needed -->
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_plan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardBackgroundColor="@color/cardBg"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        android:foreground="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <!-- Distributor Logo -->
                <ImageView
                    android:id="@+id/iv_distributor_logo"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="12dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_round_rect_500"
                    android:visibility="gone"
                    tools:src="@drawable/ic_profile_placeholder" />

                <!-- Plan Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_plan_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textColor"
                        android:textSize="18sp"
                        android:fontFamily="@font/outfit_semi_bold"
                        tools:text="Premium Monthly" />

                    <TextView
                        android:id="@+id/tv_distributor_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textLight"
                        android:textSize="14sp"
                        android:fontFamily="@font/outfit_medium"
                        android:visibility="gone"
                        tools:text="Netflix" />

                </LinearLayout>

                <!-- Plan Type Badge -->
                <TextView
                    android:id="@+id/tv_plan_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Base Plan"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:fontFamily="@font/outfit_medium"
                    android:background="@drawable/bg_round_rect_5"
                    android:backgroundTint="@color/baseColor"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- Price Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tv_plan_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/baseColor"
                    android:textSize="24sp"
                    android:fontFamily="@font/outfit_bold"
                    tools:text="$9.99" />

                <TextView
                    android:id="@+id/tv_plan_interval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textLight"
                    android:textSize="16sp"
                    android:fontFamily="@font/outfit_medium"
                    android:layout_marginStart="8dp"
                    tools:text="per month" />

                <!-- Special Offer Badge -->
                <TextView
                    android:id="@+id/tv_special_offer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BEST VALUE"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:fontFamily="@font/outfit_bold"
                    android:background="@drawable/bg_round_rect_5"
                    android:backgroundTint="@color/darkYellow"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="2dp"
                    android:layout_marginStart="12dp"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- Description -->
            <TextView
                android:id="@+id/tv_plan_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textLight"
                android:textSize="14sp"
                android:fontFamily="@font/outfit_regular"
                android:lineSpacingExtra="2dp"
                android:visibility="gone"
                tools:text="Access to all premium content with HD streaming and unlimited downloads." />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</layout>