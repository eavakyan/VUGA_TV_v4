<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="content"
            type="com.retry.vuga.model.ContentDetail.SeasonItem.EpisodesItem" />


        <variable
            name="type"
            type="Integer" />

        <import type="com.retry.vuga.utils.Const" />

        <import type="com.retry.vuga.utils.Global" />

        <import type="com.retry.vuga.utils.Const.ItemType" />

        <import type="android.view.View" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="105dp">


                <androidx.constraintlayout.utils.widget.ImageFilterView
                    android:id="@+id/img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/stroke_width"
                    android:scaleType="centerCrop"
                    app:image_url="@{content.thumbnail}"
                    app:round="15dp"
                    tools:src="@tools:sample/backgrounds/scenic" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_stoke_15"
                    android:backgroundTint="@color/trans_stroke_color" />


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_name"
                            style="@style/TextViewLocal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/outfit_semi_bold"
                            android:maxLines="2"
                            android:text="@{String.valueOf(content.title)}"

                            android:textSize="@dimen/_18sp"
                            tools:text="spiderman " />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            
                            <TextView
                                android:id="@+id/tv_year"
                                style="@style/TextViewLocal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/outfit_light"
                                android:letterSpacing=".04"
                                android:text="@{content.formattedDuration}"
                                android:textColor="@color/text_color_light"
                                android:textSize="@dimen/_16sp"
                                tools:text="45 min" />
                                
                            <View
                                android:layout_width="1dp"
                                android:layout_height="12dp"
                                android:layout_marginHorizontal="8dp"
                                android:background="@color/text_color_light" />
                                
                            <LinearLayout
                                android:id="@+id/layout_episode_rating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:clickable="true"
                                android:focusable="true"
                                android:background="?android:attr/selectableItemBackground"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="4dp">

                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:src="@drawable/ic_star"
                                    app:tint="@color/rating_yellow" />

                                <TextView
                                    android:id="@+id/tv_episode_ratings"
                                    style="@style/TextViewLocal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:fontFamily="@font/outfit_light"
                                    android:text='@{String.format("%.1f",content.ratings)}'
                                    android:textColor="@color/rating_yellow"
                                    android:textSize="@dimen/_14sp"
                                    tools:text="8.5" />
                                    
                                <TextView
                                    android:id="@+id/tv_episode_user_rating"
                                    style="@style/TextViewLocal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="6dp"
                                    android:fontFamily="@font/outfit_light"
                                    android:text='@{content.userRating != null ? "(" + String.format("%.0f", content.userRating) + ")" : "(Rate)"}'
                                    android:textColor="@color/text_color_light"
                                    android:textSize="@dimen/_14sp"
                                    tools:text="(8)" />
                            </LinearLayout>
                        </LinearLayout>



                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <TextView

            android:id="@+id/tv_des"
            style="@style/TextViewLocal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="3dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:fontFamily="@font/outfit_light"
            android:letterSpacing=".04"
            android:maxLines="3"
            android:text="@{content.description}"
            android:textColor="@color/text_color_light"
            android:textSize="@dimen/_16sp"
            tools:text="Chemistry teacher (Bryan Cranston) with\n cancer teams up with a former student \n(Aaron Paul) to cook meth on \nBreaking Bad" />

    </LinearLayout>
</layout>