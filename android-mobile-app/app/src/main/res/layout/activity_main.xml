<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="currentPosition"
            type="androidx.databinding.ObservableInt" />

    </data>


    <RelativeLayout
        android:id="@+id/root_lout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="false"
        tools:context=".activities.MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <View
                android:id="@+id/bottom_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/stroke_width"
                android:layout_above="@id/bottomBar"
                android:background="@color/view_bg_color" />

            <LinearLayout
                android:id="@+id/bottomBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/app_black"
                android:paddingTop="10dp"
                android:paddingBottom="35dp"
                android:layout_marginBottom="10dp"
                android:visibility="visible"
                tools:visibility="visible">

                <!-- Home -->
                <LinearLayout
                    android:id="@+id/btn_home"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_home"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_home"
                        android:tint="@{currentPosition == 0 ? @color/app_color : @color/bottom_nav_inactive}" />

                    <TextView
                        android:id="@+id/tv_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/outfit_regular"
                        android:gravity="center"
                        android:text="@string/home"
                        android:textColor="@{currentPosition == 0 ? @color/app_color : @color/bottom_nav_inactive}"
                        android:textSize="@dimen/_12sp" />

                </LinearLayout>

                <!-- Search -->
                <LinearLayout
                    android:id="@+id/btn_search_nav"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_search_nav"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_search"
                        android:tint="@{currentPosition == 1 ? @color/app_color : @color/bottom_nav_inactive}" />

                    <TextView
                        android:id="@+id/tv_search_nav"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/outfit_regular"
                        android:gravity="center"
                        android:text="@string/search"
                        android:textColor="@{currentPosition == 1 ? @color/app_color : @color/bottom_nav_inactive}"
                        android:textSize="@dimen/_12sp" />

                </LinearLayout>

                <!-- Subscriptions -->
                <LinearLayout
                    android:id="@+id/btn_subscriptions"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_subscriptions"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_subscription_boxes"
                        android:tint="@{currentPosition == 2 ? @color/app_color : @color/bottom_nav_inactive}" />

                    <TextView
                        android:id="@+id/tv_subscriptions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/outfit_regular"
                        android:gravity="center"
                        android:text="Subscriptions"
                        android:textColor="@{currentPosition == 2 ? @color/app_color : @color/bottom_nav_inactive}"
                        android:textSize="@dimen/_12sp" />

                </LinearLayout>

                <!-- Watch List -->
                <LinearLayout
                    android:id="@+id/btn_watch"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_watch"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_bookmark_not"
                        android:tint="@{currentPosition == 3 ? @color/app_color : @color/bottom_nav_inactive}" />

                    <TextView
                        android:id="@+id/tv_watch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/outfit_regular"
                        android:gravity="center"
                        android:text="@string/watch_list"
                        android:textColor="@{currentPosition == 3 ? @color/app_color : @color/bottom_nav_inactive}"
                        android:textSize="@dimen/_12sp" />

                </LinearLayout>

                <!-- Profile -->
                <LinearLayout
                    android:id="@+id/btn_profile"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <!-- Profile Avatar -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/nav_profile_avatar"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp"
                        android:backgroundTint="@{currentPosition == 4 ? @color/app_color : @color/download_yellow}">

                        <TextView
                            android:id="@+id/nav_profile_initial"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@color/app_black"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:text="U" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tv_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/outfit_regular"
                        android:gravity="center"
                        android:text="Profile"
                        android:textColor="@{currentPosition == 4 ? @color/app_color : @color/bottom_nav_inactive}"
                        android:textSize="@dimen/_12sp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible"
            tools:visibility="visible">

            <ImageView

                android:layout_width="80dp"
                android:layout_height="23dp"
                android:src="@drawable/logo" />

            <!-- Profile Name -->
            <TextView
                android:id="@+id/tvProfileNameMain"
                style="@style/TextViewLocal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/outfit_semi_bold"
                android:text="Hi, John"
                android:textSize="16sp"
                android:textColor="@color/text_color" />

            <!--                    <TextView-->
            <!--                        style="@style/TextViewLocal"-->
            <!--                        android:layout_width="wrap_content"-->
            <!--                        android:layout_height="wrap_content"-->
            <!--                        android:layout_marginStart="10dp"-->
            <!--                        android:fontFamily="@font/outfit_black"-->
            <!--                        android:text="@string/app_name"-->
            <!--                        android:textAllCaps="true"-->
            <!--                        android:textSize="@dimen/_20sp" />-->

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            
            <!-- Download Button (moved to far right) -->
            <ImageView
                android:id="@+id/btnDownloadMain"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/bg_round"
                android:backgroundTint="@color/view_bg_color"
                android:padding="8dp"
                android:src="@drawable/ic_download"
                android:clickable="true"
                android:focusable="true"
                app:tint="@color/text_color_light" />




        </LinearLayout>

        <!--        <eightbitlab.com.blurview.BlurView-->
        <!--            android:id="@+id/blurView"-->
        <!--            android:visibility="gone"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="@dimen/top_size_of_appbar"-->
        <!--            app:blurOverlayColor="@color/nav_bar_blur">-->


        <!--        </eightbitlab.com.blurview.BlurView>-->


        <LinearLayout
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone" />


    </RelativeLayout>


</layout>