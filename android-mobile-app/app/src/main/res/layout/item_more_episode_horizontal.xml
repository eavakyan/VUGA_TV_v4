<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="15dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/iv_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:round="10dp"
            tools:src="@tools:sample/backgrounds/scenic" />

        <!-- Episode number badge -->
        <TextView
            android:id="@+id/tv_episode_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_margin="8dp"
            android:background="@drawable/bg_round_rect_5"
            android:backgroundTint="@color/app_black_70"
            android:fontFamily="@font/outfit_semi_bold"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:text="E1"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sp"
            tools:text="E1" />

        <!-- Duration badge -->
        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="8dp"
            android:background="@drawable/bg_round_rect_5"
            android:backgroundTint="@color/app_black_70"
            android:fontFamily="@font/outfit_light"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:text="45 min"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sp"
            android:visibility="gone"
            tools:text="45 min"
            tools:visibility="visible" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_title"
        style="@style/TextViewLocal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/outfit_regular"
        android:maxLines="2"
        android:text="Episode Title"
        android:textSize="@dimen/_14sp"
        tools:text="The Beginning" />

</LinearLayout>