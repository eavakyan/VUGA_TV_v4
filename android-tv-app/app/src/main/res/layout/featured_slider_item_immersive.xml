<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <!-- Background Layer: Full-width video player with TrailerBackgroundView -->
    <com.vugaenterprises.androidtv.ui.components.TrailerBackgroundView
        android:id="@+id/trailerBackgroundView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Overlay Container for poster and metadata -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <!-- Left Side: Vertical Poster Overlay -->
        <FrameLayout
            android:layout_width="280dp"
            android:layout_height="380dp"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="32dp">

            <ImageView
                android:id="@+id/posterImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:background="@drawable/poster_background"
                android:src="@drawable/placeholder_image"
                android:elevation="8dp" />

            <!-- Poster shadow/border for visibility -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/poster_background"
                android:elevation="4dp" />

        </FrameLayout>

        <!-- Bottom-Right: Metadata Overlay -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp"
            android:orientation="vertical"
            android:background="@drawable/detail_gradient_overlay"
            android:padding="20dp"
            android:elevation="8dp"
            android:minWidth="320dp">

            <!-- Content Title -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Featured Content Title"
                android:textColor="@android:color/white"
                android:textSize="32sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="12dp"
                android:shadowColor="@android:color/black"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4" />

            <!-- Content Description -->
            <TextView
                android:id="@+id/descriptionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Content description goes here..."
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:maxLines="3"
                android:ellipsize="end"
                android:alpha="0.9"
                android:layout_marginBottom="16dp"
                android:shadowColor="@android:color/black"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2" />

            <!-- Metadata Row: Rating, Year, Duration -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">

                <!-- Rating with star icon -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/type_badge_background"
                    android:padding="8dp"
                    android:layout_marginEnd="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="★"
                        android:textColor="#FFD700"
                        android:textSize="18sp"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/ratingText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8.5"
                        android:textColor="#FFD700"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Release Year -->
                <TextView
                    android:id="@+id/yearText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2024"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="@drawable/type_badge_background"
                    android:padding="8dp"
                    android:layout_marginEnd="12dp"
                    android:shadowColor="@android:color/black"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2" />

                <!-- Duration -->
                <TextView
                    android:id="@+id/durationText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2h 15min"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="@drawable/type_badge_background"
                    android:padding="8dp"
                    android:shadowColor="@android:color/black"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2" />

            </LinearLayout>

            <!-- Action Buttons Row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start">

                <Button
                    android:id="@+id/playButton"
                    android:layout_width="wrap_content"
                    android:layout_height="52dp"
                    android:text="▶ PLAY"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:background="@drawable/play_button_background"
                    android:minWidth="140dp"
                    android:layout_marginEnd="16dp"
                    android:focusable="true"
                    android:nextFocusRight="@+id/infoButton"
                    android:elevation="4dp" />

                <Button
                    android:id="@+id/infoButton"
                    android:layout_width="wrap_content"
                    android:layout_height="52dp"
                    android:text="ⓘ MORE INFO"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:background="@drawable/info_button_background"
                    android:minWidth="160dp"
                    android:focusable="true"
                    android:nextFocusLeft="@+id/playButton"
                    android:elevation="4dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Genre chips overlay (optional, positioned at top-left) -->
        <LinearLayout
            android:id="@+id/genreContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <!-- Genre chips will be added programmatically -->

        </LinearLayout>

    </FrameLayout>

</FrameLayout>