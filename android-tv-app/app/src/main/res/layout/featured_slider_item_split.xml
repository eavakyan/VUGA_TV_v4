<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:orientation="horizontal"
    android:background="@drawable/episode_normal_background"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:padding="16dp">

    <!-- Left Side: Vertical Poster (40% width) -->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:layout_marginEnd="16dp">

        <ImageView
            android:id="@+id/posterImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:background="@drawable/poster_background"
            android:src="@drawable/placeholder_image" />

        <!-- Poster Gradient Overlay -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_overlay" />

    </FrameLayout>

    <!-- Right Side: Trailer and Content Info (60% width) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:orientation="vertical">

        <!-- Trailer Container -->
        <FrameLayout
            android:id="@+id/trailerContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:background="@android:color/black"
            android:layout_marginBottom="16dp">

            <!-- Trailer WebView/VideoView placeholder -->
            <TextView
                android:id="@+id/trailerPlaceholder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Trailer Loading..."
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:background="@android:color/black" />

        </FrameLayout>

        <!-- Content Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/detail_gradient_overlay">

            <!-- Title -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Featured Content Title"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="8dp" />

            <!-- Description -->
            <TextView
                android:id="@+id/descriptionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Content description goes here..."
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:maxLines="3"
                android:ellipsize="end"
                android:alpha="0.9"
                android:layout_marginBottom="12dp" />

            <!-- Rating and Details Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/ratingText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="★ 8.5"
                    android:textColor="#FFD700"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/detailsText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2023 • 120 min"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp"
                    android:alpha="0.8" />

            </LinearLayout>

            <!-- Action Buttons Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="start">

                <Button
                    android:id="@+id/playButton"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="▶ PLAY"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:background="@drawable/play_button_background"
                    android:minWidth="120dp"
                    android:layout_marginEnd="12dp"
                    android:focusable="true"
                    android:nextFocusRight="@+id/infoButton" />

                <Button
                    android:id="@+id/infoButton"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="ⓘ MORE INFO"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:background="@drawable/info_button_background"
                    android:minWidth="140dp"
                    android:focusable="true"
                    android:nextFocusLeft="@+id/playButton" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>